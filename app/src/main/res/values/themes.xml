<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AccurateTiming" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>

        <!-- 关键属性：允许内容延伸到刘海区但自动避开摄像头 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/misans_regular</item>
        <item name="android:colorControlActivated">@color/theme_red</item> <!-- 设置激活状态下的光标颜色 -->
    </style>

    <!-- 禁用右滑退出 -->
    <style name="Theme.AccurateTiming.DisableExit" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:windowSwipeToDismiss" tools:ignore="WearBackNavigation">false</item>
    </style>
</resources>